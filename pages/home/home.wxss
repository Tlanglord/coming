/* pages/home/home.wxss */

.home-sw-cantianer {
  height: 100vh;
  width: 100%;
}

.slide-image {
  height: 100%;
  width: 100%;
}

.slide-animation {
  animation: fadin 3s;
}

@keyframes fadin {
  0% {
    opacity: 0;
  }

  50% {
    opacity: 0.5;
  }

  100% {
    opacity: 1;
  }
}

.home-sw-item-box {
  width: 85%;
  height: 90%;
  margin: 0 auto;
  background-color: #fff;
  position: relative;
  top: 30px;
  padding: 10px;
  box-sizing: border-box;
}

.home-sw-item-bg {
  width: 100%;
  height: 100vh;
  position: absolute;
}

.a-star {
  position: absolute;
  z-index: 1;
}

.smallStars {
  z-index: 0;
}

.star {
  width: 80px;
